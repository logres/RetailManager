<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/order_info_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                app:layout_constraintTop_toTopOf="parent">

            </ListView>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3pt"
                android:background="@drawable/window"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="7dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="3pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginEnd="3pt" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="3pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginEnd="3pt"
                    android:background="@color/dark_gray" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="3pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginEnd="3pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25pt"
                    android:layout_weight=".5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40pt"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3pt"
                        android:layout_marginTop="3pt"
                        android:layout_marginBottom="3pt"
                        android:layout_weight=".5"
                        android:background="@drawable/shape_corner_right"
                        android:paddingTop="5pt"
                        android:text="订单日期"
                        android:textAlignment="center"
                        android:textColor="@color/pale_white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/order_time"
                        android:layout_width="100pt"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3pt"
                        android:layout_marginBottom="3pt"
                        android:layout_weight="2"
                        android:paddingStart="3pt"
                        android:paddingTop="5pt"
                        android:text="日期"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25pt"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="40pt"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3pt"
                        android:layout_marginTop="3pt"
                        android:layout_marginBottom="3pt"
                        android:layout_weight=".5"
                        android:background="@drawable/shape_corner_right"
                        android:paddingTop="5pt"
                        android:text="收货地址"
                        android:textAlignment="center"
                        android:textColor="@color/pale_white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/order_addr"
                        android:layout_width="100pt"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3pt"
                        android:layout_marginBottom="3pt"
                        android:layout_weight="2"
                        android:paddingStart="3pt"
                        android:paddingTop="5pt"
                        android:text="地址"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25pt"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="40pt"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3pt"
                        android:layout_marginTop="3pt"
                        android:layout_marginBottom="3pt"
                        android:layout_weight=".5"
                        android:background="@drawable/shape_corner_right"
                        android:paddingTop="5pt"
                        android:text="付款金额"
                        android:textAlignment="center"
                        android:textColor="@color/pale_white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/order_price"
                        android:layout_width="100pt"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3pt"
                        android:layout_marginBottom="3pt"
                        android:layout_weight="2"
                        android:paddingStart="3pt"
                        android:paddingTop="5pt"
                        android:text="付款"
                        android:textAlignment="textStart"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</FrameLayout>