<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chartInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3pt"
        android:background="@drawable/shape_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5pt"
        android:paddingEnd="5pt"
        android:paddingBottom="5pt">

        <CheckBox
            android:id="@+id/cart_info_check"
            android:layout_width="15pt"
            android:layout_height="15pt" />

        <ImageView
            android:id="@+id/cart_info_image"
            android:layout_width="120dp"
            android:layout_height="128dp"
            android:src="@android:drawable/ic_menu_gallery"
            app:srcCompat="@drawable/image_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5pt"
                android:text="商品名"
                android:textColor="@color/dark_gray"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cart_info_num"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:paddingStart="5pt"
                android:text="数量"
                android:textColor="@color/gray"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cart_info_price"
                    android:layout_width="85pt"
                    android:layout_height="match_parent"
                    android:paddingStart="5pt"
                    android:text="总价格"
                    android:textAlignment="textStart"
                    android:textColor="@color/dark_gray"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cart_info_delete"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/delete"
                    android:textAlignment="center"
                    android:textColor="@color/pale_white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>